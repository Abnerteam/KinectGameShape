<Window x:Class="LapinCretinsFormes.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Topmost="True"
        Background="Black"
        Title="Chargement..." Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Chargement..." Name="WindowTitle"
                   FontSize="25" VerticalAlignment="Center" 
                   FontFamily="./Fonts/#Futura-CondensedMedium"
                   Foreground="WhiteSmoke" Margin="15,0,0,0"/>
        <Border BorderBrush="LightPink" BorderThickness="1" Grid.Row="1">
        </Border>
        <TextBlock Grid.Row="2" Name="ChargingReasonTextBlock"
                   FontSize="60" VerticalAlignment="Center" 
                   HorizontalAlignment="Center" FontFamily="./Fonts/#Futura-CondensedMedium"
                   Foreground="WhiteSmoke"/>
    </Grid>
</Window>